<%= @option.name %>

<p>Name: <%= @option.name %></p>
<p>Name: <%= @option.super_power %></p>
<p>Name: <%= @option.super_weakness %></p>

<%= form_for @avatar do |f| %>
    <%= f.hidden_field :user_id %>
    <%= f.hidden_field :option_id %><br>
    <% if current_user.admin? %>
                <%= link_to 'Edit Option', edit_option_path(@option) %>
        <%= f.submit "Keep Avatar" %>
    <% else %>
        "Your not admin"
    <% end %>
<% end %>